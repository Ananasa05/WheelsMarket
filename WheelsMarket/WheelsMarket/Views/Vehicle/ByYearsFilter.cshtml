@using WheelsMarket.Services.Vehicles.ViewModel
@model ByPriceFilterViewModel
@{
}

<h1>Add Vehicle</h1>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 coll-xl-6">
        <form method="get" asp-action="ShowSelectedInformationForAllVehicles">
               <div class="mb-3">
                <label asp-for="@Model.min" class="form-label">Min Price</label>
                <select asp-for="@Model.min" class="form-control">
                    <option value="">-- Select Make --</option>
                    <option value="1998">1998</option>
                    <option value="1999">1999</option>
                    <option value="2000">2000</option>
                    <!-- Add more options for vehicle makes as needed -->
                </select>
                <span asp-validation-for="max" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.max" class="form-label">Max Price</label>
                <select asp-for="@Model.max" class="form-control">
                    <option value="">-- Select Make --</option>
                    <option value="2002">2002</option>
                    <option value="2003">2003</option>
                    <option value="2004">2004</option>
                    <!-- Add more options for vehicle makes as needed -->
                </select>
                <span asp-validation-for="max" class="text-danger"></span>
            </div>

          

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
