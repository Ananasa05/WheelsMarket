@using WheelsMarket.Services.Vehicles.ViewModel
@model AddVehicleViewModel
@{
}

<h1>Add Brand</h1>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 coll-xl-6">
        <form method="post" action="Create">
            <div class="mb-3">
            <label asp-for="@Model.Color" class="form-label">Title</label>
            <input asp-for="@Model.Color" class="form-control" aria-required="true"/>
            <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
            <label asp-for="@Model.Distance" class="form-label">Title</label>
            <input asp-for="@Model.Distance" class="form-control" aria-required="true"/>
            <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="mb-3">
            <label asp-for="@Model.Fuel" class="form-label">Title</label>
            <input asp-for="@Model.Fuel" class="form-control" aria-required="true"/>
            <span asp-validation-for="Fuel" class="text-danger"></span>
            </div>
            <div class="mb-3">
            <label asp-for="@Model.Condition" class="form-label">Title</label>
            <input asp-for="@Model.Condition" class="form-control" aria-required="true"/>
            <span asp-validation-for="Condition" class="text-danger"></span>
            </div>
           
             <div class="mb-3">
             <label for="" class="form-label">Edition</label>
             <br />
             <select asp-for="EditionId" asp-items="@ViewBag.EditionId" class="form-control"></select>
             </div>
             <div class="mb-3">
             <label for="" class="form-label">Type</label>
             <br />
             <select asp-for="VehicleTypeTypeId" asp-items="@ViewBag.VehicleTypeTypeId" class="form-control"></select>
             </div>
     <button type="submit" class="btn btn-primary">Submit</button>

         </form>
    </div>
</div>
