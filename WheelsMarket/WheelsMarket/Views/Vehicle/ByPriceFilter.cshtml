@using WheelsMarket.Services.Vehicles.ViewModel
@model ByPriceFilterViewModel
@{
}

<h1>Add Vehicle</h1>

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 coll-xl-6">
		<form method="post" asp-action="ByPriceFilter">
			<div class="mb-3">
			<label asp-for="@Model.min" class="form-label">Color</label>
			<input asp-for="@Model.min" class="form-control" aria-required="true"/>
			<span asp-validation-for="min" class="text-danger"></span>
			</div>
			<div class="mb-3">
			<label asp-for="@Model.max" class="form-label">Distance</label>
			<input asp-for="@Model.max" class="form-control" aria-required="true"/>
			<span asp-validation-for="max" class="text-danger"></span>
			</div>
		

	 <button type="submit" class="btn btn-primary">Submit</button>

		 </form>
	</div>
</div>