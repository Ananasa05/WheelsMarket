@using WheelsMarket.Services.Vehicles.ViewModel
@model AddVehicleViewModel
@{
}

<h1>Add Edition</h1>

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 coll-xl-6">
		<form method="post" asp-action="Add">
			<div class="mb-3">
			<label asp-for="@Model.Color" class="form-label">Title</label>
			<input asp-for="@Model.Color" class="form-control" aria-required="true"/>
			<span asp-validation-for="Color" class="text-danger"></span>
			</div>
			 <div class="mb-3">
			 <label for="" class="form-label">BrandId</label>
			 <br />
			 <select asp-for="BrandId" asp-items="@ViewBag.BrandId" class="form-control"></select>
			 </div>    
	 @* <button type="submit" class="btn btn-warning">Ok</button> *@


			 <div class="mb-3">
			 <label for="" class="form-label">Edition</label>
			 <br />
			 <select asp-for="EditionId" asp-items="@ViewBag.EditionId" class="form-control"></select>
			 </div>

			  <div class="mb-3">
			 <label for="" class="form-label">VehicleTypeSection</label>
			 <br />
			 <select asp-for="VehicleTypeSectionId" asp-items="@ViewBag.VehicleTypeSectionId" class="form-control"></select>
			 </div>    
	 <button type="submit" class="btn btn-warning">Ok</button>


			 <div class="mb-3">
			 <label for="" class="form-label">VehicleTypeType</label>
			 <br />
			 <select asp-for="VehicleTypeTypeId" asp-items="@ViewBag.VehicleTypeTypeId" class="form-control"></select>
			 </div>

	 <button type="submit" class="btn btn-primary">Submit</button>

		 </form>
	</div>
</div>
