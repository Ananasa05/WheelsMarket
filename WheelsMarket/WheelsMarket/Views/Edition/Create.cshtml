@using WheelsMarket.Services.Editions.ViewModel
@model AddEditionViewModel
@{
}

<h1>Add Edition</h1>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 coll-xl-6">
        <form method="post" action="Create">
            <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Title</label>
            <input asp-for="@Model.Name" class="form-control" aria-required="true"/>
            <span asp-validation-for="Name" class="text-danger"></span>
            </div>

             <div class="mb-3">
             <label for="" class="form-label">Publisher</label>
             <br />
             <select asp-for="BrandId" asp-items="@ViewBag.BrandId" class="form-control"></select>
             </div>
     <button type="submit" class="btn btn-primary">Submit</button>

         </form>
    </div>
</div>
