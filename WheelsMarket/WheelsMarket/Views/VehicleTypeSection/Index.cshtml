@model List<WheelsMarket.Services.VehicleTypeSections.ViewModel.AllVehicleTypeSectionViewModel>
@{
}

<h1 class=" mb-5">Type Sections</h1>

<div class=" justify-content-center row" >
    <div class=" col-4 text-center"><a asp-controller="VehicleTypeSection" asp-action="Create" class="btn btn-warning">Add Section</a></div>
</div>


<table class="table">

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>do</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>fat</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td colspan="2">Larry the Bird</td>
                <td>twitter</td>
            </tr>
        </tbody>
    </table>

    <thead>
        <tr>
            <th> Name </th>
            <th> Delete </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in this.Model)
        {
                           <tr>
                        <td>@cat.Section</td>
                            <td><a asp-controller="VehicleTypeSection" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-danger">Delete</a></td>
                            <td><a asp-controller="VehicleTypeSection" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-danger">Edit</a></td>
                        
                    </tr>
        }


    </tbody>
</table>